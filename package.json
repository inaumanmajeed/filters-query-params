{
  "name": "filters-query-params",
  "version": "0.1.0",
  "description": "Type-safe filter/query param helpers using Zod. Works with React, Next.js, and React Router.",
  "keywords": ["filters", "query", "params", "zod", "nextjs", "react", "router"],
  "license": "MIT",
  "author": "Nauman <you@example.com>",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "sideEffects": false,
  "files": ["dist"],
  "peerDependencies": {
    "zod": ">=3.22.0",
    "react": ">=17 || >=18"
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.0",
    "@types/node": "^20.12.7",
    "@types/react": "^18.3.3",
    "react": "^18.3.1",
    "typescript": "^5.5.4",
    "tsup": "^8.1.0",
    "vitest": "^2.0.5"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  }
}
